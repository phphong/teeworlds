{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Bam build",
            "type": "shell",
            "command": "bam",
            "args": [
                "conf=debug"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake configure win",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G'Visual Studio 16 2019'",
                "-A",
                "x64",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-B${workspaceFolder}/build",
                "-S${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake configure mac",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                "-B${workspaceFolder}/build",
                "-S${workspaceFolder}"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "CMake build",
            "type": "shell",
            "command": "cmake --build .",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake run test",
            "type": "shell",
            "command": "cmake --build . --target run_tests",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}